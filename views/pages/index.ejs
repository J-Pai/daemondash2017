<!-- views/pages/index.ejs -->
<!DOCTYPE html>

<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/login-header %>
        <main>
            <div class="container-fluid">
            	<div class="jumbotron">
                <h1 class="text-center">Info Server Main Page</h2>
                <p class="text-center">This is the main page of the Info Server.</p>            
            	</div>
            </div>
        </main>
        <% include ../partials/footer %>
    </body>
    
    <!--SIGN UP MODAL-->
    <div id="myModal1" class="modal fade" role="dialog">
    	<div class="modal-dialog" role="document">
			<div class="modal-content">
    			<div class="modal-header">
    				<h3 class="modal-title">Signing Up</h5>
    			</div>
    		
    			<div class="modal-body">
    				<form>
  						<div class="form-group">
    						<label for="exampleInputEmail1">Email address</label>
    						<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
  						</div>
  						<div class="form-group">
    						<label for="exampleInputPassword1">Password</label>
    						<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  						</div>
  					</form>
    			</div>

      			<div class="modal-footer">
        			<button type="button" class="btn btn-primary">Sign up</button>
        			<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      			</div>				
			</div>    		
    	</div>
    </div>

    <!--SIGN IN MODAL-->
    <div id="myModal2" class="modal fade" role="dialog">
    	<div class="modal-dialog" role="document">
			<div class="modal-content">
    			<div class="modal-header">
    				<h3 class="modal-title">Signing In</h5>		
    			</div>
    		
    			<div class="modal-body">
    				<form>
  						<div class="form-group">
    						<label for="exampleInputEmail1">Email address</label>
    						<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
  						</div>
  						<div class="form-group">
    						<label for="exampleInputPassword1">Password</label>
    						<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  						</div>
 						<div class="checkbox">
    						<label>
      						<input type="checkbox"> Remember me
    						</label>
  						</div>  						
  					</form>
    			</div>

      			<div class="modal-footer">
        			<button type="button" class="btn btn-primary">Sign in</button>
        			<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      			</div>				
			</div>    		
    	</div>
    </div>



</html>
