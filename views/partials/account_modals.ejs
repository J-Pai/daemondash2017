<!-- views/partials/account_modals.ejs -->

<!--SIGN UP MODAL-->
<div id="modal1" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--Modal title-->
            <div class="modal-header">
                <h3 class="modal-title">Hello {{yourName}}</h5>
            </div>
      
            <!--Modal body-->
            <div class="modal-body">
                <form action="/signup" method="post">
                    <div class="form-group">
                        <label for="exampleInputPhone1">Phone number</label>
                        <input type="text" class="form-control input-medium bfh-phone" 
                            name="phonenumber" data-format="+1 (ddd) ddd-dddd"
                            id="exampleInputPhone1">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName">Name</label>
                        <input type="text" class="form-control" name="name"
                                id="exampleInputName" placeholder="Name"
                                ng-model="yourName">
                    </div>
                 
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password"
                                id="exampleInputPassword1" placeholder="Password">
                    </div>

                    <!--Modal footer-->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary customPriBtn">
                                Sign up
                        </button>
                        <button type="button" class="btn btn-secondary" 
                                data-dismiss="modal">
                                Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--SIGN IN MODAL-->
<div id="modal2" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--Modal title-->
            <div class="modal-header">
                <h3 class="modal-title">Welcome Back</h5>   
            </div>
      
            <!--Modal body-->
            <div class="modal-body">
                <form action="/login" method="post">
                    <div class="form-group">
                        <label for="exampleInputPhone2">Phone number</label>
                        <input type="text" class="form-control input-medium bfh-phone" 
                            name="phonenumber" data-format="+1 (ddd) ddd-dddd"
                            id="exampleInputPhone2">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password" 
                                id="exampleInputPassword1" placeholder="Password">
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox"> Remember me</label>
                    </div>
                 
                    <!--Modal footer-->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary customPriBtn">
                                Sign in
                        </button>
                        <button type="button" class="btn btn-secondary" 
                                data-dismiss="modal">
                                Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

